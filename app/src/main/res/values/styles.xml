<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorError">@color/white</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppThemeBlue" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blueapp</item>
        <item name="colorPrimaryDark">@color/blueapp</item>
        <item name="colorAccent">@color/blueapp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorLink">@color/blueapp</item>
        <item name="colorError">@color/colorPrimaryDark</item>
    </style>
    <style name="datePickerStyleDark" parent="android:Widget.DatePicker">
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="AppThemeNight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorError">@color/colorPrimaryNight</item>
        <item name="android:textColorPrimary">@color/blueapp</item>
        <item name="android:itemBackground">@color/colorPrimaryDarkNight</item>
    </style>

    <style name="AppTheme.PopUpTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>


    <style name="ListviewStyle" parent="android:style/Widget.Material.Light.ListView">    </style>


    <style name="ListItems" parent="Theme.AppCompat">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="ListItemsNight" parent="Theme.AppCompat">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="datepickerstyle" parent="android:Widget.DatePicker">
        <item name="android:textColor">@color/white</item>
        <item name="android:dateTextAppearance">@color/white</item>
        <item name="android:calendarTextColor">@color/white</item>
        <item name="colorPrimary">@color/white</item>

    </style>

</resources>
